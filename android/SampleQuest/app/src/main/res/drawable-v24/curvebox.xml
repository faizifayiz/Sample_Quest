<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#33000000" /> <!-- Semi-transparent black color for shadow -->
            <corners android:radius="300dp" />
        </shape>
    </item>

    <!-- Shape Layer (Your Original Drawable) -->
    <item android:right="20dp" android:left="20dp" android:top="20dp" android:bottom="20dp">
        <shape android:shape="oval">
            <solid android:color="#ffffff" />
            <corners android:radius="300dp" />
            <stroke
                android:width="8dp"
                android:color="#000000"
                />
        </shape>
    </item>
</layer-list>
